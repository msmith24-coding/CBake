$CC : str = "g++";
$OUT : str = "main";

$COMPILER_FLAGS : array<str> = [
    "-O2",
    "-Wall",
    "-Wextra",
    "-Wpedantic",
    "-Werror",
    "--std=c++20",
    "-Wnon-virtual-dtor",
    "-Wold-style-cast",
    "-Wunused-parameter",
    "-Wuninitialized",
    "-Winit-self"
    "-Wshadow",
    "-Wparentheses",
    "-Wdangling-else"
];

$OBJS : array<str> = ["main.cpp", "io.cpp"];

action build:
    print("Running build action...");
    simple_compile($CC, $OBJS, $OUT, $COMPILER_FLAGS);
    print("Finished build action.");
end