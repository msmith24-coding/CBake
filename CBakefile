$COMPILER = "g++";
$FLAGS = "--std=c++20 -c";

$FILES = "./src/*.cpp";
$OBJS = "*.o";

action clean:
    print("Cleaning object files.");
    del($OBJS);
end

action build:
    run($COMPILER + " " + $FLAGS + " " + $FILES);
    run($COMPILER + " " + $OBJS  + " -o ./bin/cbake");
    call("clean");
end